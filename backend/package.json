{
  "name": "p2p-file-transfer",
  "version": "1.0.0",
  "description": "High-performance P2P file transfer system with real-time metrics",
  "main": "authServer.js",
  "scripts": {
    "start": "node authServer.js",
    "dev": "nodemon authServer.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "benchmark": "node performanceBenchmark.js",
    "lint": "eslint .",
    "prepare": "node -e \"try { require('fs').mkdirSync('users.db') } catch(e) {}\""
  },
  "keywords": [
    "p2p",
    "file-transfer",
    "webrtc",
    "jwt",
    "authentication"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.2",
    "eslint": "^8.55.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "authServer.js",
      "database.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  }
}